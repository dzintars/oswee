# From v7.3 you can use Include option
#Include config.d/some-included-config

CanonicalizeHostname yes
CanonicalDomains oswee.dev oswee.com
CanonicalizeMaxDots 0
CanonicalizeFallbackLocal no

Host *
  Port 22
  Protocol 2
  User ansible
  LogLevel INFO
  StrictHostKeyChecking no
  IdentitiesOnly yes
  PreferredAuthentications publickey

Host ns1
  HostName ns1.oswee.local
  IdentityFile ~/.ssh/id_ed25519
  CertificateFile ~/.ssh/id_ed25519-cert.pub

Host vault
  HostName vault.oswee.local
  IdentityFile ~/.ssh/ansible_vault_local_ed25519
  # CertificateFile ~/.ssh/ansible_vault_local_ed25519-cert.pub
  StrictHostKeyChecking no

Host build
  HostName build.oswee.local
  IdentityFile ~/.ssh/ansible_build_local_ed25519
  # CertificateFile ~/.ssh/ansible_build_local_ed25519-cert.pub
  StrictHostKeyChecking no

Host sql1
  HostName sql1.oswee.local
  IdentityFile ~/.ssh/ansible_sql1_local_ed25519
  # CertificateFile ~/.ssh/ansible_sql_local_ed25519-cert.pub
  StrictHostKeyChecking no

Host dhcp
  HostName dhcp.oswee.local
  IdentityFile ~/.ssh/ansible_dhcp_local_ecdsa
  CertificateFile ~/.ssh/ansible_dhcp_local_ecdsa-cert.pub

Host pxe
  HostName pxe.oswee.local
  IdentityFile ~/.ssh/ansible_pxe_local_ecdsa
  CertificateFile ~/.ssh/ansible_pxe_local_ecdsa-cert.pub

Host bastion
  HostName bastion.oswee.local
  IdentityFile ~/.ssh/ansible_bastion_local_ecdsa
  CertificateFile ~/.ssh/ansible_bastion_local_ecdsa-cert.pub

Host jenkins
  HostName jenkins.oswee.local
  IdentityFile ~/.ssh/ansible_jenkins_local_ecdsa
  CertificateFile ~/.ssh/ansible_jenkins_local_ecdsa-cert.pub

Host s3
  HostName s3.oswee.local
  IdentityFile ~/.ssh/ansible_s3_local_ecdsa
  CertificateFile ~/.ssh/ansible_s3_local_ecdsa-cert.pub

