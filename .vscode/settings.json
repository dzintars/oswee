{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.renderWhitespace": "all",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  },
  "editor.rulers": [
    80,
    120
  ],
  "[git-commit]": {
    "editor.rulers": [
      50
    ]
  },
  "[javascript]": {
    // "editor.tabSize": 2, // Potentially overlaps with Editorconfig extension
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      // Leaving this setting there for reference. Disabled because Prettier is used for formating.
      "source.fixAll.eslint": false
    }
  },
  "[typescript]": {
    // "editor.tabSize": 2, // Potentially overlaps with Editorconfig extension
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false
    }
  },
  "files.autoSave": "off",
  // Show/hide directories and files
  "files.exclude": {
    "**/.git": true,
    // "**/bazel-*/": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/bazel-out/**": true,
    "**/dist/**": true
  },
  "eslint.debug": true,
  // "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.workingDirectories": [
    "./web/app"
  ],

  "material-icon-theme.activeIconPack": "react_redux",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/bazel-out": true,
    "**/dist": true,
    ".history": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  // "git.ignoreLimitWarning": true
  "cSpell.words": [
    "Editorconfig",
    "Hygen",
    "Klavins",
    "ROADMAP",
    "bigint",
    "buildifier",
    "camelcase",
    "chmod",
    "devtools",
    "ibazel",
    "jsonlint",
    "lintstaged",
    "monorepository",
    "npmignore",
    "pnpify",
    "proto",
    "protobuf",
    "symlink",
    "tslib",
    "yarnpkg",
    "stylelintrc"
  ]
}
