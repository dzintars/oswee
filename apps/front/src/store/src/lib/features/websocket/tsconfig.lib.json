{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "module": "es2015",
    "declaration": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
